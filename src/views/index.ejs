<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Series</title>
  </head>
  <body>
    <div id="app">
      <header id="header">
        <h1 class="title">Series</h1>
      </header>

      <main id="main">
        <form id="form">
          <div class="form__box-name">
            <input class="form__name" type="text" placeholder="Name..." />
          </div>
          <div class="form__box-description">
            <textarea
              class="form__description"
              placeholder="Description"
            ></textarea>
          </div>
          <div class="form__box-image">
            <input type="file" class="form__file" />
          </div>
          <div class="form__box-send">
            <button class="form__send">Enviar</button>
          </div>
        </form>
      </main>
    </div>

    <!-- script -->
    <script src="/js/main.js"></script>
  </body>
</html>
